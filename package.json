{
  "name": "argus",
  "version": "1.0.0",
  "description": "A faster, more usable GitHub PR review experience",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run migrate && node --import tsx/esm --watch src/index.ts",
    "migrate": "tsx src/db/migrate.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/static": "^7.0.4",
    "@fastify/view": "^9.1.0",
    "@octokit/rest": "^21.0.2",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "fastify": "^4.28.1",
    "gemoji": "^8.1.0",
    "github-markdown-css": "^5.8.1",
    "marked": "^14.1.0",
    "shiki": "^3.21.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.14.10",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  }
